page {
	background: white;
}

.all_100v {
	width: 100%;
	height: 100vh;
}

.category-tag-area {
	display: flex;
	flex-direction: row;
	width: 100%;
	font-size: 26rpx;
	white-space: nowrap;
	height: 100rpx;
	background-color: white;
	z-index: 1000;
	overflow: auto;
}

.top_120r {
	top: 120rpx;
}

.category-tag-area.fixedArea {
	position: fixed;
	top: 0;
}

.marTop_100r {
	margin-top: 100rpx;
}

.category-tag-view-normal {
	/* display: inline-block; */
	padding: 30rpx;
	/* overflow: auto; */
	border-bottom: #fff 5rpx solid;
}

.category-tag-view-selected {
	display: inline-block;
	padding: 30rpx;
	/* overflow: auto; */
	border-bottom: #ff5353 5rpx solid;
	color: #ff5353;
}

.goodsListBox {
	width: 100%;
	padding-left: 30rpx;
	box-sizing: border-box;
}

/* 新版搜索组件在子分类页的样式 */
.am-popup-content {
  width: 100%;
}

.am-popup-content {
  position: absolute;
}

/* 微信小程序特有搜索样式 */
.index_search {
  width: 100%;
  height: 100vh;
  background: #fff;
  position: fixed;
	left: 0;
  top: 0;
  transform: translateX(100%);
  transition: transform 0.3s;
  z-index: 1001;
}

.index_search.show {
  transform: translateX(0);
}