.pad_24r {
  padding: 0 24rpx;
}

.padTop_24 {
  padding-top: 24rpx;
}

.marTop_24r {
  margin-top: 24rpx;
}

.marTop_18r {
  margin-top: 18rpx;
}

.bannerListBox {
  width: 100%;
  padding: 24rpx 24rpx 0 24rpx;
  box-sizing: border-box;
}

.bannerListSwiper {
  height: 174rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.bannerList_dot {
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
  margin-right: 12rpx;
}

.bannerList_dot.active {
  width: 24rpx;
  border-radius: 45rpx;
}

.homeSliderNav {
  border-radius: 8rpx;
  overflow: hidden;
}

.waterFallGoodsList {
  display: flex;
  /* padding: 0 24rpx; */
  box-sizing: border-box;
}

.waterFallGoodsView.padL_24r {
  padding-left: 24rpx;
}

.waterFallGoodsView.padR_24r {
  padding-right: 24rpx;
}

.waterFallGoodsView {
  width: 50%;
  box-sizing: border-box;
  position: relative;
  padding: 0;
  border: none;
  overflow: hidden;
}

.waterFallTitFixed {
  position: fixed;
  top: 88rpx;
  z-index: -1;
  background: #fcfcfc;
  left: 0;
  opacity: 0;
}

.waterFallTitFixed.show {
  opacity: 1;
  z-index: 10000;
}

.loading_gif {
  width: 26rpx;
  height: 26rpx;
  margin-right: 8rpx;
}

/* 返回顶部按钮 */

.goTopBox {
  position: fixed;
  bottom: 68rpx;
  right: -85rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  border: 1px solid #eaeaea;
  transition: all 0.3s;
}

.goTopBox.show {
  right: 30rpx;
}

/* 弹窗广告 */

.back-black {
  background-color: rgba(0, 0, 0, 0);
}

.advertPop_close {
  right: 0;
  top: 0;
}

.width_400r {
  width: 400rpx;
}

.homePop {
  padding: 60rpx 60rpx;
  max-width: 400rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

