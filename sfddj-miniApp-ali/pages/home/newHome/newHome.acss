@import '../css-public/adverts.acss';
@import '../css-public/itemGoodsCard.acss';

page {
  background: #f5f5f5;
  overflow-x: hidden;
}

.zIndex_10002 {
  z-index: 10002;
}

.boxShadow {
  -webkit-box-shadow: 1px 1px 3px #e5e5e5;
  -moz-shadow: 1px 1px 3px #e5e5e5;
  box-shadow: 1px 1px 3px #e5e5e5;
}

.borRa_16r {
  border-radius: 16rpx;
  overflow: hidden;
}

.color-c6c6c6 {
  color: #c6c6c6;
}

.home_searchBox {
  height: 88rpx;
  padding: 0 30rpx;
}

.home_message {
  margin-right: 30rpx;
}

.home_search_bar {
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 45rpx;
  box-sizing: border-box;
}

.home_notice {
  margin-left: 20rpx;
}

.index_search {
  width: 100%;
  height: 100%;
  background: #fff;
  position: fixed;
  top: 0;
  transform: translate(100%, 0);
  transition: transform 0.3s;
  z-index: 10001;
}

.index_search.show {
  transform: translate(0, 0);
}

