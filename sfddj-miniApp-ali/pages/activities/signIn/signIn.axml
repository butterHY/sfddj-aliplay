<view>
  <view class="signInArea">
    <view class="signInHead">
      <view class="signInHeadBg">
        <image src="{{baseImageLocUrl}}miniappImg/activity/signIn/signInHead.png" class="all_100">
      </view>
      <view class="activityIn">
        <image src="{{baseImageLocUrl}}miniappImg/activity/signIn/activityRules.png" class="all_100 activityRules"/>
      </view>

      <!--弹幕-->
      <view class="barrage">
        <!-- <block a:for="{{doommData && doommData.length > 0}}" a:key="id">
          <text a:if="{{item.display}}" class="barrageTip" style="animation: first {{item.time}}s linear forwards;top:{{item.top}}rpx;color:{{item.color}};">
              {{item.text}}
          </text>
        </block> -->
      </view>

      <!-- <view class="barrage" a:if="{{barrageList && barrageList.length > 0}}" style="animation: barrageAnimation {{time}}s linear infinite">
        <view>
          <view class="barrageTip top">
            <view class="barrageTxt" a:for="{{ barrageList }}" a:if="{{index%3 == 0}}" a:key="{{index}}">
              {{item}}
            </view>
          </view>
          <view class="barrageTip middle">
