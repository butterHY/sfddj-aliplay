}

.seckill-ads .goodsViewBox .goodsShowImg {
  border-radius: 10rpx;
  width: 100%;
}

.seckill-ads .littleIcon {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 10rpx;
  right: 10rpx;
}

.seckill-ads .activitysPrice {
  font-size: 32rpx;
  color: #ff5353;
  font-weight: 600;
  text-align: center;
}

.seckill-ads .marTop_15 {
