.borBox {
  box-sizing: border-box;
}

.itemGoodsCard .goodsArea {
  position: relative;
  display: block;
  background-color: #fff;
  box-shadow: 1px 1px 2px rgba(105, 105, 105, 0.1), -1px 1px 2px rgba(105, 105, 105, 0.1);
  border-radius: 10px;
  box-sizing: border-box;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.itemGoodsCard .goodsArea.boxShadow {
  -webkit-box-shadow: 1px 1px 3px #e5e5e5;
  -moz-shadow: 1px 1px 3px #e5e5e5;
  box-shadow: 1px 1px 3px #e5e5e5;
}

.itemGoodsCard .goodsArea.borRa_16r {
  border-radius: 16rpx;
}

