} */

.itemGoodsCard .goodsImg {
  text-align: center;
  position: relative;
  height: 312rpx;
  width: auto;
  margin: 0;
  overflow: hidden;
  box-sizing: border-box;
  line-height: 312rpx;
}

.goodsImg image {
  display: inline-block;
  width: 260rpx;
  height: 260rpx;
  border-radius: 2px;
  vertical-align: middle;
}

.itemGoodsCard .allCompensation {
  width: 65rpx;
  height: 65rpx;
  top: 35rpx;
}

.font-0 {
  font-size: 0;
}

.itemGoodsCard .goodsInfo {
  width: 100%;
  box-sizing: border-box;
}

.itemGoodsCard .goodsInfo.notAtHome {
  padding: 0 20rpx 16rpx;
}

.itemGoodsCard .goodsInfo.atHome {
  padding: 0 24rpx 24rpx;
